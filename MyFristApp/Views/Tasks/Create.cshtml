@model MyFristApp.Models.TaskViewModel
@{
	ViewData["Title"] = "Jakie zadanko wariacie?";
}

<h2>Co tam mamy do zrobienia?</h2>

<form asp-action="Create" method="post">
	<div class="form-group">
		<label for="Name">Nazwa</label>
		<input type="text" asp-for="Name" class="form-control" />
	</div>
	<div class="form-group">
		<label for="Description">Opis</label>
		<input type="text" asp-for="Description" class="form-control" />
	</div>
	<div class="form-group">
		<label for="ClassName">Zajęcia</label>
		<select class="form-select" asp-for="ClassName">
			<option>HTML</option>
			<option>JAVA</option>
			<option>LINUX</option>
			<option>SIECI</option>
			<option>Zieleń w przestrzeni zurbanizowanej</option>
		</select>
	</div>
	<div class="form-group">
		<label for="Deadline">Do kiedy?</label>
		<input type="date" asp-for="Deadline" class="form-control" />
	</div>
	<button type="submit" class="btn btn-primary">Dodaj</button>
</form>
<form asp-action="Index" method="get">
	<button type="submit" class="btn btn-primary">Wróć</button>
</form>
